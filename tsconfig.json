{
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*", "dist/*"],
    },

    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],

    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true
  }
}